<%- include('./base/header.ejs') %>
    <div class="container">
        <table class="table table-dark table-striped table-hover">
            <thead>
                <tr>
                    <th scope="row">SNo.</th>
                    <td>RollNo</td>
                    <td>First Name</td>
                    <td>Last Name</td>
                    <td>Father Name</td>
                    <td>Adhar Card No</td>
                    <td>Mobile No</td>
                    <td>Actions</td>
                    <td>Delete</td>
                </tr>
            </thead>
            <% students.forEach((studentData,index) => { %>
                <tr>
                    <th scope="row"><%= index+1 %></th>
                    <td class="tdata"><%= studentData.rollNo %></td>
                    <td class="tdata"><%= studentData.firstName %></td>
                    <td class="tdata"><%= studentData.lastName %></td>
                    <td class="tdata"><%= studentData.fatherName %></td>
                    <td class="tdata"><%= studentData.adharCardNo %></td>
                    <td class="tdata"><%= studentData.mobileNo %></td>
                    <td><a href="/edit/student/page/<%= studentData._id%>" class="btn btn-warning w-75">Edit</a></td>
                    <td><a href="/delete/student/<%= studentData._id%>" class="btn btn-danger w-75">Delete</a></td>
                </tr>
            <% }); %>
        </table>
    </div>

    <style>
